{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "pretty": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "removeComments": false,
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules/",
        "src/lib/"
    ]
}