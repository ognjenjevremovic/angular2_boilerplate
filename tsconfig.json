{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "pretty": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "removeComments": false,
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom",
            "dom.iterable"
        ]
    },
    "exclude": [
        "node_modules/",
        "app/vendor"
    ]
}